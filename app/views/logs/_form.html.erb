<div id='log_filter' hidden="true">
  <%= form_with url: 'logs/update', remote: true do |form| %>
    <div class='row'>
      <div class='col-sm-3'>
        <%= form.select(:sort_type, [["Time", 0], ["Currency", 1], ["Operation", 2], ["Rate", 3]], { :selected => Rate.sort_type }, { class: 'form-control' }) %>
      </div>
      <div class='col-sm-2'>
        <%= form.select(:currency_filter, [["All", 2], ["USD", 0], ["EUR", 1]], { :selected => Rate.currency_filter }, { class: 'form-control' }) %>
      </div>
      <div class='col-sm-2'>
        <%= form.select(:operation_filter, [["All", 2], ["buy", 0], ["sell", 1]], { :selected => Rate.operation_filter }, { class: 'form-control' }) %>
      </div>
      <div class='col-sm-3'>
        <%= form.select(:order, [["Low to high", 0], ["High to low", 1]], { :selected => Rate.order }, { class: 'form-control' }) %>
      </div>
      <div class='col-sm-2'>
        <%= form.submit 'Sort', class: 'btn btn-primary btn-block' %>
      </div>
    </div>
    <br>
  <% end %>
</div>