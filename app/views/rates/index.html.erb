<div id="rates" class="container col-sm-12">
  <h1>Current Rate</h1>
  <div class="row">
    <div class="col-sm-2">
      <h4><br></h4>
      <h2>USD:</h2>
      <p><b>Average:</b></p>
      <p><b>Forecast:</b></p>
    </div>
    <div class="col-sm-2">
      <h4>buy</h4>
      <h2>
        <% if @current_rates[:usd][:buy] %>
          <%= "%.2f" % @current_rates[:usd][:buy].rate.round(2) %> &#8381;
        <% else %>
          N/D
        <% end %>
      </h2>
      <p>
        <% if averages[:usd][:buy] %>
          <%= "%.2f" % averages[:usd][:buy].round(2) %> &#8381;
        <% else %>
          N/D
        <% end %>
      </p>
      <p>
        <% if forecasts[:usd][:buy] %>
          <%= "%.2f" % forecasts[:usd][:buy].round(2) %> &#8381;
        <% else %>
          N/D
        <% end %>
      </p>
    </div>
    <div class="col-sm-2">
      <h4>sell</h4>
      <h2>
        <% if @current_rates[:usd][:sell] %>
          <%= "%.2f" % @current_rates[:usd][:sell].rate.round(2) %> &#8381;
