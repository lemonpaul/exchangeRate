$('#rates').replaceWith("<%= j render :template => 'rates/index' %>");
if ($('#new_link').is(":visible"))
{
  $('#triggers').replaceWith("<%= j render :template => 'triggers/index' %>");
  $('#triggers_header').replaceWith("<h1 id='triggers_header'><%= j pluralize(@triggers.size, t(:trigger)) %></h1>");
  $('#triggers_table').replaceWith("<%= j render :template => 'triggers/triggers' %>");
}
if ($('#rate_count').is(":visible"))
{
  $('#rate_count').replaceWith("<h1 id='rate_count'><%= j pluralize(@rates.size, t(:rate_header)) %></h1>");
}
if ($('#logs').is(":visible"))
{
  $('#logs').replaceWith("<%= j render :template => 'logs/logs' %>");
  $('#logs').show();
}