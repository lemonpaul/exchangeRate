<h1>Trigger list</h1>

<div id="new_trigger">
  <%= link_to 'New trigger', new_trigger_path, id: "new_link", remote: true %>
</div>
<% if @triggers.any? %>
  <table id="triggers_table">
    <tr align='center'>
      <th>Email</th>
      <th>Currency</th>
      <th>Operation</th>
      <th>Type</th>
      <th>Rate</th>
    </tr>
    <%= render @triggers %>
  </table>
<% end %>
