<div id="triggers" class="container">
  <% cache @triggers do %>
    <% if @triggers %>
      <h1><%= pluralize(@triggers.size, "Trigger") %></h1>
      <%= link_to 'New trigger', new_trigger_path, id: "new_link", remote: true, class: 'badge' %>
      <% if @triggers.any? %>
        <table id="triggers_table" class="table">
          <thead>
            <tr>
              <th>Email</th>
              <th>Currency</th>
              <th>Operation</th>
              <th>Type</th>
              <th>Rate</th>
            </tr>
          </thead>
          <tfoot>
            <%= render :partial => 'triggers/trigger', :collection => @triggers %>
          </tfoot>
        </table>
      <% end %>
    <% else %>
      <h1>0 Triggers</h1>
      <%= link_to 'New trigger', new_trigger_path, id: "new_link", remote: true, class: 'badge' %>
    <% end %>
  <% end %>
</div>